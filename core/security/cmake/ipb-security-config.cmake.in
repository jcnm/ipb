@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

find_dependency(Threads)

# Find SSL library based on backend used during build
set(IPB_SECURITY_SSL_BACKEND "@IPB_SSL_BACKEND_RESOLVED@")

if(IPB_SECURITY_SSL_BACKEND STREQUAL "openssl")
    find_dependency(OpenSSL)
elseif(IPB_SECURITY_SSL_BACKEND STREQUAL "mbedtls")
    find_dependency(MbedTLS)
elseif(IPB_SECURITY_SSL_BACKEND STREQUAL "wolfssl")
    find_package(PkgConfig)
    if(PkgConfig_FOUND)
        pkg_check_modules(WOLFSSL wolfssl)
    endif()
endif()

include("${CMAKE_CURRENT_LIST_DIR}/ipb-security-targets.cmake")

check_required_components(ipb-security)
